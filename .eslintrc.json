{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended-type-checked"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": true,
    "tsconfigRootDir": "."
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          "./*/**/*",
          "!../*",
          "!../../*",
          "!../../../*",
          "!../../../../*",
          "!../../../../../*",
          "!../../../../../../*",
          "!../../../../../../../*",
          "!../../../../../../../../*",
          "!../../../../../../../../../*",
          "!../../../../../../../../../../*",
          "@/*/*"
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/index.ts"],
      "rules": { "no-restricted-imports": "off" }
    }
  ]
}
